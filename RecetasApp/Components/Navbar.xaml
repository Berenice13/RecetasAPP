<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="RecetasApp.Components.Navbar"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:RecetasApp"
    xmlns:views="clr-namespace:RecetasApp.Components"
    Shell.FlyoutBehavior="Disabled"
    Title="RecetasApp">
    
    <TabBar>
        <Tab Title="Inicio" Icon="home.png">
            <ShellContent ContentTemplate="{DataTemplate views:ListaDivisas}" />
        </Tab>
        <Tab Title="Operaciones" Icon="buysell.png">
            <ShellContent ContentTemplate="{DataTemplate views:Operaciones}" />
        </Tab>
        <Tab Title="Configuración" Icon="configuration.png">
            <ShellContent ContentTemplate="{DataTemplate views:Configuracion}" />
        </Tab>
        <Tab Title="Configuración" Icon="configuration.png">
            <ShellContent ContentTemplate="{DataTemplate views:Configuracion}" />
        </Tab>
    </TabBar>

</Shell>
