<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RecetasApp.Components.Sidebar"
             BackgroundColor="#FFDAD9D9"
             WidthRequest="250"
             Padding="20">
    <VerticalStackLayout>
        <Label Text="Mis Recetas"
               FontSize="18"
               Padding="10"
               HorizontalOptions="Start">
            <Label.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnMisRecetasTapped" />
            </Label.GestureRecognizers>
        </Label>
        <Label Text="Guardadas"
               FontSize="18"
               Padding="10"
               HorizontalOptions="Start">
            <Label.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnGuardadasTapped" />
            </Label.GestureRecognizers>
        </Label>
        <Label Text="Cerrar"
               FontSize="18"
               TextColor="Red"
               Padding="10"
               HorizontalOptions="Start">
            <Label.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnCloseSidebarTapped" />
            </Label.GestureRecognizers>
        </Label>
    </VerticalStackLayout>
</ContentView>
