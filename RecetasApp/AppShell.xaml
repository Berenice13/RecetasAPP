<Shell x:Class="RecetasApp.AppShell"
       xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:local="clr-namespace:RecetasApp"
       xmlns:views="clr-namespace:RecetasApp.Views"
       Shell.FlyoutBehavior="Disabled"
       Title="RecetasApp">

    <TabBar>
        <Tab Title="Inicio" Icon="home.png">
            <ShellContent Route="home" ContentTemplate="{DataTemplate views:HomePage}" />
        </Tab>
        <Tab Title="Explorar" Icon="search.png">
            <ShellContent ContentTemplate="{DataTemplate views:SearchPage}" />
        </Tab>
        <Tab Title="Top" Icon="top.png">
            <ShellContent ContentTemplate="{DataTemplate views:HomePage}" />
        </Tab>
        <Tab Title="Perfil" Icon="user.png">
            <ShellContent ContentTemplate="{DataTemplate views:HomePage}" />
        </Tab>
    </TabBar>
</Shell>
